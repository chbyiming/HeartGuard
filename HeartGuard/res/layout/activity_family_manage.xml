<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightgreys" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lightgreys"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rlyt_user_afd"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@color/snow"
            android:orientation="horizontal" >

            <cn.heart.view.CircleImageView
                android:id="@+id/civ_head_afd"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_head"
                app:border_color="@color/flowerblue"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/tv_local_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/civ_head_afd"
                android:text="@string/local_user"
                android:textColor="@color/dimgrey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_nick_afd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/tv_local_user"
                android:text="@string/nick"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/civ_head_afd"
                android:text="@string/change_user"
                android:textColor="@color/thinkgrey"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_group"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/snow"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/family_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_family_detail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/family_detail"
                android:text="@string/family_group"
                android:textColor="@color/dimgrey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_add_family"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/snow"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/mediumgreys" >
            </View>

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_add_family" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/add"
                android:text="@string/add_family"
                android:textColor="@color/dimgrey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_account_set"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/snow"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_accout_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_accout_set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/icon_accout_set"
                android:text="@string/account_setting"
                android:textColor="@color/dimgrey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_my_ecgsensor"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/snow"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/mediumgreys" >
            </View>

            <ImageView
                android:id="@+id/myecgsensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_ecgsensor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/myecgsensor"
                android:text="@string/my_ecgsensor"
                android:textColor="@color/dimgrey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_about_app"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/snow"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/icon_about"
                android:text="@string/about_app"
                android:textColor="@color/dimgrey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@+id/one_detail"
                android:src="@drawable/ic_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>